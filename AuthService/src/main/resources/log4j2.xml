<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARNING">
    <Appenders>

        <!-- Ghi ra console -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c{1}:%L] - %m%n"/>
        </Console>

        <!-- Ghi log ra file theo ngày -->
        <RollingFile name="FileLogger"
                     fileName="logs/app.log"
                     filePattern="logs/app-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%t] [%c{1}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Logger cho các package -->
        <Logger name="com.learning.cloud" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- Log cho Hibernate SQL -->
        <Logger name="org.hibernate.SQL" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Log cho giá trị tham số -->
        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger -->
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>